<h1>Posts#edit</h1>
<% if @post.errors.any? %>
 <ul>
   <% @post.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
 </ul>
<% end %>


<%= form_for(@post) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :author_name %><br>
  <%= f.text_field :author_name %><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.submit %>
<% end %>

<p>Find me in app/views/posts/edit.html.erb</p>
